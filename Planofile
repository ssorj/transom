from bullseye import *

project.name = "transom"
project.extra_dirs = ["files"]

@target(extends=build, default=True)
def build():
    with project_env(), working_dir(quiet=True):
        touch("config/config.py")
        run("transom --help", quiet=True, stash=True)
        run("transom render --init-only config input output", quiet=True)

@target(extends=clean)
def clean():
    remove("qpid-site/output")

@target(requires=build)
def test():
    with project_env():
        run("transom-test")

@target(requires=build)
def render():
    with project_env(), working_dir("qpid-site"):
        run("transom render --force config input output")

# https://stackoverflow.com/questions/22475849/node-js-what-is-enospc-error-and-how-to-solve
# $ echo fs.inotify.max_user_watches=524288 | sudo tee -a /etc/sysctl.conf && sudo sysctl -p
@target
def serve():
    with project_env(), working_dir("qpid-site"):
        run("transom render --force --serve 8080 config input output")

@target(requires=build)
def profile():
    with project_env(), working_dir("qpid-site"):
        run("py-spy record -o /tmp/profile.svg -- transom render --force config input output")

@target(requires=build)
def check_links():
    with project_env(), working_dir("qpid-site"):
        run("transom check-links config input output")

@target(requires=build)
def check_files():
    with project_env(), working_dir("qpid-site"):
        run("transom check-files config input output")
